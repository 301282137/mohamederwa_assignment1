<!-- Header -->
<%- include ('../partials/header.ejs'); %>

<!-- Main Nav-->
<%- include ('../partials/main_nav.ejs'); %>

<!-- Main Content -->
<main class="container">
  <div class="row">
    <div class="col-md-offset-3 col-md-10">
      <h1><%= title %></h1>
      <a href="/contact-list/add" class="btn btn-primary" role="button">
        <i class="fas fa-plus-circle"></i> Add a Contact
      </a>
      <br />

      <table class="table table-bordered table-striped table-hover">
        <!-- Header Row -->
        <tr>
          <th class="text-center">Name</th>
          <th class="text-center">Number</th>
          <th class="text-center">Email</th>
          <th class="text-center"></th>
          <th class="text-center"></th>
        </tr>

        <!-- Repeatable Template Row -->
        <% for(let count=0; count < ContactList.length; count++) { %>
        <tr>
          <td class="text-center"><%= ContactList[count].contactName %></td>

          <td class="text-center"><%= ContactList[count].contactNumber %></td>

          <td class="text-center"><%= ContactList[count].email %></td>

          <td class="text-center">
            <a
              href="/contact-list/edit/<%= ContactList[count]._id %>"
              class="btn btn-primary">
              <i class="fas fa-pencil-alt"></i> Edit
            </a>
          </td>

          <td class="text-center">
            <a
              href="/contact-list/delete/<%= ContactList[count]._id %>"
              class="btn btn-danger">
              <i class="fas fa-trash-alt"></i> delete
            </a>
          </td>
        </tr>
        <% } %>
      </table>
    </div>
  </div>
</main>

<!-- Bottom Nav-->
<%- include ('../partials/bottom_nav.ejs'); %>

<!-- footer -->
<%- include ('../partials/footer.ejs'); %>
