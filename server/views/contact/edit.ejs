<!-- Header -->
<%- include ('../partials/header.ejs'); %>

<!-- Main Nav-->
<%- include ('../partials/main_nav.ejs'); %>

<!-- Content for the Add page -->
<div class="container">
    <div class="row">
        <div class="offset-md-3 col-md-6">
            <h1><%= title %></h1>

            <form class="form" method="POST">
                <div class="form-group">
                    <label for="nameTextField">Contact Title</label>
                    <input type="text" class="form-control"
                    id="nameTextField"
                    placeholder="Enter the Contact Title"
                    name="name" 
                    value="<%= contact.name %>"
                    required>
                </div>

                <div class="form-group">
                    <label for="authorTextField">Author</label>
                    <input type="text" class="form-control"
                    id="authorTextField"
                    placeholder="Enter the Contact's Author"
                    name="author" 
                    value="<%= contact.author %>"
                    required>
                </div>

                <div class="form-group">
                    <label for="publishedTextField">Year</label>
                    <input type="text" class="form-control"
                    id="publishedTextField"
                    placeholder="Enter the Year of Publication"
                    name="published" 
                    value="<%= contact.published %>"
                    required>
                </div>

                <div class="form-group">
                    <label for="descriptionTextArea">Description</label>
                    <textarea type="text" class="form-control"
                    id="descriptionTextArea"
                    placeholder="Enter the a brief description of the contact"
                    name="description" 
                    required>
                    <%= contact.description %>
                    </textarea>
                </div>

                <div class="form-group">
                    <label for="priceTextField">Price</label>
                    <input type="text" class="form-control"
                    id="priceTextField"
                    placeholder="Enter the Contact's Price"
                    name="price" 
                    value="<%= contact.price %>"
                    required>
                </div>

                <button class="btn btn-primary" type="submit">
                    <i class="fas fa-edit"></i> Submit</button>
                
                    <a href="/contact-list" class="btn btn-warning">
                        <i class="fas fa-undo"></i> Cancel</a>

            </form>
        </div>

    </div>
</div>


<!-- Bottom Nav-->
<%- include ('../partials/bottom_nav.ejs'); %>

<!-- footer -->
<%- include ('../partials/footer.ejs'); %>