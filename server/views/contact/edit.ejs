<!-- Header -->
<%- include ('../partials/header.ejs'); %>

<!-- Main Nav-->
<%- include ('../partials/main_nav.ejs'); %>

<!-- Main Content -->
<div class="container">
    <div class="col">
        <div class="col-md-offset-4 col-md-10"></div>
        <h1><%= title %></h1>

        <form class="form" method="POST" >
            <div class="form-group">
                <label for="nameTextField">Contact Name</label>
                <input type="text" class="form-control"
                id="nameTextField"
                placeholder="Enter Contact Name"
                name="name" 
                value="<%= contact.name %>"
                required>
            </div>

            <div class="form-group">
                <label for="numberTextField">Contact Number</label>
                <input type="text" class="form-control"
                id="numberTextField"
                placeholder="Enter Contact Number"
                name="number" 
                value="<%= contact.number %>"
                required>
            </div>

            <div class="form-group">
                <label for="numberTextField">Contact Email</label>
                <input type="text" class="form-control"
                id="emailTextField"
                placeholder="Enter Contact Email"
                name="email" 
                value="<%= contact.email %>"
                required>
            </div>

            <button class="btn btn-primary" type="submit">
                <i class="fas fa-edit"></i> Submit</button>

                <a href="/contact-list" class="btn btn-warning">
                    <i class="fas fa-undo"></i> Cancel</a>
        </form>
    </div>
</div>

<!-- Bottom Nav-->
<%- include ('../partials/bottom_nav.ejs'); %>

<!-- footer -->
<%- include ('../partials/footer.ejs'); %>